<div id="accountModal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>
      <div class="modal-body" id="account-modal-body">
        <img src="/assets/img/tech-tie-up.png">
        <div class="row" id="signinWap">
          <div class="col-sm-6 col-md-6 signinWap">

            <h1><span class="fa fa-sign-in"></span> Login</h1>

           {{!-- show any messages that come back with authentication  --}}
          
           {{!--  {{#if message.length > 0}}
              <div class="alert alert-danger">{{message}}</div>
            {{/if}} --}}

            {{!--  LOGIN FORM  --}}
            <form action="/login" method="post" id="signin-form">
                <div class="form-group">
                    <label>Email</label>
                    <input type="text" class="form-control" name="email" required="email">
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" name="password" required="password">
                </div>
                <button type="submit" class="btn btn-default btn-lg">Login</button>
            </form>
          </div>
          <div class="col-sm-6 col-md-6">
            <h1><span class="fa fa-sign-in"></span> Signup</h1>
            <button id="signup-btn" class="btn btn-default">create account</button>   
          </div>
        </div>
        <div class="row hide" id="signupWrap">
          {{> account/modal-signup-block}}
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn close" data-dismiss="modal">Close</button>
      </div>
    </div>

  </div>
</div>