{{!-- display all categories --}}
<section id="categories" class="clearfix">
<div class="container">
	<div class="categories-header">
		<h2>CATEGORIES</h2>
	</div>
	<div class="categories-content clearfix">
		<div class="categories-container clearfix">
			{{#each categories}}
			<div id="cat-{{this.id}}" class="category-wrap">
				<div class="category-content">
					<h2><a href="/category/{{this.route}}/{{this.id}}">{{this.title}}</a></h2>
				</div>
			</div>
			{{/each}}
		</div>
	</div>
</div>
</section>
